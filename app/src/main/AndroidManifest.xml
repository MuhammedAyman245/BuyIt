<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Moon"
        tools:targetApi="31">
        <activity
            android:name=".screens.activities.SplashScreenActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.activities.RecentlyViewedActivity"
            android:exported="false"
            android:label="@string/title_activity_recently_viewed"
            android:theme="@style/Theme.Moon" />
        <activity
            android:name=".screens.activities.CheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".screens.registration.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".screens.registration.LogInActivity"
            android:exported="false"
            android:label="@string/title_activity_log_in"
            android:theme="@style/Theme.Moon" />
        <activity
            android:name=".screens.activities.FavouriteActivity"
            android:exported="false"
            android:label="@string/title_activity_favourite"
            android:theme="@style/Theme.Moon" />
        <activity
            android:name=".screens.activities.CategoryActivity"
            android:exported="false" />
        <activity
            android:name=".screens.activities.ProductDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false"/>


    </application>
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>